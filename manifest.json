{
	"manifest_version": 2,

	"name": "MakeMeLater",
	"description": "This extension parses the current webpage for recipe data and writes the recipe to a specified file path.",
	"version": "1.0",

	"page_action": {
          "default_icon": {                    
            "19": "resources/icon.png",          
            "38": "resources/icon.png"           
          },
          "default_name": "MakeMeLater",
          "default_popup": "popout.html"        
    },

	"background": {
		"scripts": ["js/background.js"]
	},

	"content_scripts": [
    { "matches": ["http://*/*"], "js": ["js/recipe_content_script.js"] }
  	],

	"icons" : {
		"128" : "resources/logo.png"
	},

	"permissions": [
		"notifications",
		"tabs"
	]
}
